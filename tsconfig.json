{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"baseUrl": "./",
		"paths": {
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"],
      "components/*": ["src/components/*"],
      "config/*": ["src/config/*"],
      "routes/*": ["src/routes/*"],
      "state/*": ["src/state/*"],
      "utilities/*": ["src/utilities/*"],
			"types/*": ["src/types/*"]
    },
    "typeRoots": [
      "src/types/"
    ]
	},
}
